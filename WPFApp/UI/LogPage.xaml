<Page x:Class="Oratoria36.UI.LogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Oratoria36.UI"
      mc:Ignorable="d" 
      d:DesignHeight="940" d:DesignWidth="1920" Background="#FFE0E0E0"
      Title="LogPage">

    <Grid>
        <DataGrid ItemsSource="{Binding Logs}" AutoGenerateColumns="False" HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Log" Binding="{Binding}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>