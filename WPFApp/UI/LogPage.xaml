<Page x:Class="Oratoria36.UI.LogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Oratoria36.UI"
      mc:Ignorable="d" 
      d:DesignHeight="890" d:DesignWidth="1920" Background="#FFE0E0E0"
      Title="LogPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="LogGrid" 
                  ItemsSource="{Binding Logs}" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  Grid.Column="0"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Время" Binding="{Binding Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" Width="150"/>
                <DataGridTextColumn Header="Уровень" Binding="{Binding Level}" Width="80">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Level}" Value="Error">
                                    <Setter Property="Background" Value="#FFDDDD"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Level}" Value="Warn">
                                    <Setter Property="Background" Value="#FFFFDD"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Level}" Value="Info">
                                    <Setter Property="Background" Value="#DDFFDD"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Источник" Binding="{Binding Logger}" Width="100"/>
                <DataGridTextColumn Header="Сообщение" Binding="{Binding Message}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBox x:Name="ExceptionDetails" 
                 Grid.Column="1" 
                 Margin="10"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 Text="{Binding ElementName=LogGrid, Path=SelectedItem.Exception}"/>
    </Grid>
</Page>