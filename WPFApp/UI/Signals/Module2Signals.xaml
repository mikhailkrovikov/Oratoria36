<Page x:Class="Oratoria36.UI.Signals.Module2SignalsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Oratoria36.UI.Signals"
      Title="Module2SignalsPage"
      Background="#FFE0E0E0"
      Height="890" Width="1920">

    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Style="{StaticResource CardContainer}">
            <DockPanel>
                <TextBlock Text="ДИСКРЕТНЫЕ ВХОДЫ" 
                          Style="{StaticResource SectionTitle}" 
                          DockPanel.Dock="Top"/>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid x:Name="DigitalInputGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="40"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto" MinWidth="120"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Label Content="Пин" Grid.Column="0" Style="{StaticResource HeaderLabel}"/>
                        <Label Content="Наименование сигнала" Grid.Column="1" Style="{StaticResource HeaderLabel}"/>
                        <Label Content="Состояние" Grid.Column="2" Style="{StaticResource HeaderLabel}"/>
                    </Grid>
                </ScrollViewer>
            </DockPanel>
        </Border>
        <Border Grid.Column="2" Style="{StaticResource CardContainer}">
            <DockPanel>
                <TextBlock Text="ДИСКРЕТНЫЕ ВЫХОДЫ" 
                          Style="{StaticResource SectionTitle}" 
                          DockPanel.Dock="Top"/>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid x:Name="DigitalOutputGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="60"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto" MinWidth="100"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Content="Пин" Grid.Column="0" Style="{StaticResource HeaderLabel}"/>
                        <Label Content="Наименование сигнала" Grid.Column="1" Style="{StaticResource HeaderLabel}"/>
                        <Label Content="Управление" Grid.Column="2" Style="{StaticResource HeaderLabel}"/>
                    </Grid>
                </ScrollViewer>
            </DockPanel> 
        </Border>
    </Grid>
</Page>